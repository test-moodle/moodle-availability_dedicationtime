{{!
    @template availability_dedicationtime/dedication

    Displays a dedication time selector

    Example context (json):
    {

    }
}}

<span class="availability-group form-group">
    <label>
        <span class="pr-3">{{#str}}title, availability_dedicationtime{{/str}}</span>
        <input type="text" name="availability_dedicationtime_value" title="{{#str}}title, availability_dedicationtime{{/str}}" class="form-control mr-2" size="5">
    </label>
    <label>
        <span class="accesshide">{{#str}}unit, availability_dedicationtime{{/str}}</span>
        <select name="availability_dedicationtime_unit" title="{{#str}}unit, availability_dedicationtime{{/str}}" class="custom-select">
            <option value="hours">{{#str}}hours, availability_dedicationtime{{/str}}</option>
            <option value="minutes">{{#str}}minutes, availability_dedicationtime{{/str}}</option>
        </select>
    </label>
</span>
